<section>
 	<h1>{{ page.title }}</h1>
  <div class="container">
    {%- for animal in animals -%}
      <div class="animal">
        <div class="animal__text">
          <strong class="label">{{page.name}}:</strong>
          {{ animal.name }}
        </div>
        <div class="animal__text">
          <strong class="label">{{page.country}}:</strong>
          {{ animal.country }}
        </div>
        <div class="animal__text">
          <strong class="label">{{page.description}}:</strong>
          {{ animal.description }}
        </div>
      </div>
    {%- endfor -%}
  </div>
</section>